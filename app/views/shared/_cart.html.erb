<div class="col-lg-3">
  <h1 class="my-4">Shop Cart</h1>
  <hr>
   <div class="item-list">
      <% current_cart.cart_items.each do |item| %>
      <%= render partial: "shared/item", locals: { item: item } %>
      <% end %>
    </div>
    <hr>
    <div class="subtotal">
      <p>Subtotal</p>
      <p class="ammount"><%= current_cart.subtotal %></p>          
    </div>
    <%= link_to "View Cart", cart_path %>
</div>